---
interface Props {
    isPageTitle?: boolean;
}

const { isPageTitle } = Astro.props;

---

{
    isPageTitle ?
        <h1 class="font-extrabold text-5xl max-w-[729px] tracking-tighter"><slot /></h1>
    :
        <h2 class="font-extrabold text-5xl max-w-[720px] tracking-tighter"><slot /></h2> 
}