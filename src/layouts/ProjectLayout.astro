---
import { Image } from 'astro:assets';
import SectionTitle from '../components/SectionTitle.astro';
import Subheader from '../components/Subheader.astro';
import Layout from './Layout.astro'
import Button from '../components/Button.astro';
import github from '../assets/github-white.svg'
import arrow from '../assets/arrow-left.svg'
const { frontmatter } = Astro.props
---

<Layout title={frontmatter.titulo}>
    <div class="w-full mt-16 flex flex-row items-center justify-center">
		<div class="w-full max-w-[1000px] flex justify-between flex-row">
            <div>
                <SectionTitle>{frontmatter.titulo}</SectionTitle>
                <Subheader>{frontmatter.descricao}</Subheader>
                <div class="text-base font-semibold mt-8 max-w-lg">
                    <slot />
                </div>
                <div class="flex gap-4 w-full mt-8">
                    <Button buttonIcon={arrow} href='/portfolio'>Back to projects</Button>
                    <Button buttonIcon={github} href={frontmatter.link}>Visit project</Button>
                </div>
            </div>
            <div class="overflow-hidden">
                <Image src={frontmatter.img} alt={frontmatter.descricao} width={400} height={400}/>
            </div>
        </div>
    </div>
</Layout>