---
import { Image } from 'astro:assets';
import SectionTitle from '../components/SectionTitle.astro';
import Subheader from '../components/Subheader.astro';
import Layout from './Layout.astro'
import Button from '../components/Button.astro';
import github from '../assets/github-white.svg'
import arrow from '../assets/arrow-left.svg'
const { frontmatter } = Astro.props
---

<Layout title={frontmatter.titulo}>
    <div class="w-full mt-16 flex flex-col items-center justify-center">
		<div class="w-full max-w-[1000px] flex lg:justify-between flex-col lg:flex-row justify-center items-center">
            <div>
                <SectionTitle>{frontmatter.titulo}</SectionTitle>
                <Subheader>{frontmatter.descricao}</Subheader>
                <div class="text-base font-semibold mt-8 max-w-lg">
                    <slot />
                </div>
                
            </div>
            <div class="overflow-hidden mt-8">
                <Image loading="eager" src={frontmatter.img} alt={frontmatter.descricao} width={400} height={400}/>
            </div>
        </div>
        <div class="justify-center items-center lg:justify-start lg: lg:items-start max-w-[1000px] flex gap-4 w-full mt-8">
            <Button buttonIcon={arrow} href='/portfolio'>Back to projects</Button>
            <Button buttonIcon={github} href={frontmatter.link}>Visit project</Button>
        </div>
    </div>
</Layout>